{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist/",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "lib": ["es2017", "dom"]
  },
  "exclude": ["node_modules", "dist", "es", "lib", "src/**/*.test.ts"]
}
